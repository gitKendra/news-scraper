{{!-- Only output articles if they exist in database --}}
{{#each article}}
	<div class='card'>
		<div class='card-header d-flex justify-content-between'>
			<h4 class='card-title'>{{title}}</h4>
			<button data-id='{{_id}}' data-bool="true" class='btn btn-info save-btn'>Save Article</button>
		</div>
		<div class='card-body'>
			<p class='card-text'>{{body}} </p>
			
		</div>
	</div>


{{else}}

	<div class='card text-white bg-danger'>
		<div class='card-body'>
			<h4 class='card-title'>No Articles to Display</h4>
			<p class='card-text'>Click the scrape button above to get new articles.</p>
		</div>
	</div>

{{/each}}

<!-- Small modal -->
<div class="modal fade bd-example-modal-sm" id="save-alert" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Success!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Article added to Saved Articles.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>

